{
  "name": "better-browser",
  "version": "1.0.0",
  "description": "Better Browser makes your browsers (Chrome, Firefox, etc) better by giving you suggestions about flags.",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn run lint:fix && node ./build/build.js",
    "build:clean": "cross-env BUILD_TARGET=clean node ./build/build.js",
    "fmt": "tsfmt -r --baseDir src/",
    "lint": "yarn run fmt && tslint -p src/tsconfig.json -c tslint.json src/**/*.ts",
    "lint:fix": "yarn run fmt && tslint -p src/tsconfig.json -c tslint.json --fix src/**/*.ts",
    "test": "xo test.js && ava"
  },
  "devDependencies": {
    "@types/webpack": "^3.8.3",
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-closure-elimination": "^1.3.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-minify-webpack-plugin": "^0.2.0",
    "cfonts": "^1.1.3",
    "chalk": "^2.3.0",
    "cross-env": "^5.1.3",
    "del": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "esprima": "^4.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "ini": "^1.3.5",
    "inject-loader": "^3.0.1",
    "multispinner": "^0.2.1",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-loader": "^3.5.3",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2",
    "typescript-formatter": "^7.0.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1",
    "xo": "^0.18.2"
  },
  "xo": {
    "space": true
  },
  "repository": {
    "type": "git",
